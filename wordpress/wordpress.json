{
   "variables": {
     "instance_type": "",
     "wordpress_version": "" 
    },
    "builders": [{
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0de53d8956e8dcf80",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ami_name": "wordpress-{{timestamp}}"
    }],
    "provisioners": [
        {
        "type": "shell",
        "inline": [
          "sudo yum update -y",
          "sudo yum install php unzip php-mysql -y",
          "sudo yum install mysql mariadb-server httpd -y",
          "sudo yum install wget -y",
          "sudo wget https://wordpress.org/{{user `wordpress_version`}}.zip",
          "sudo unzip  {{user `wordpress_version`}}.zip",
          "sudo rsync -avP ~/wordpress/ /var/www/html/",
          "sudo chown -R apache:apache /var/www/html/*",
          "sudo systemctl enable httpd"
            ]
         }, 
        {
        "type": "file",
        "source": "test_file",
        "destination": "/tmp/test_file"
        }
    ]
}